<Page x:Class="YANApp.Views.SettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:YANApp.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      DataContext="{Binding Source={StaticResource Locator},
                            Path=SettingsViewModel}"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment="Left"
                   Margin="10,10,0,0"
                   TextWrapping="Wrap"
                   Text="Settings"
                   VerticalAlignment="Top"
                   Style="{StaticResource TitleTextBlockStyle}" />
        <StackPanel Margin="10,81,10,10">

            <TextBox Header="Number of notes"
                     Margin="0 5"
                     HorizontalAlignment="Left"
                     Text="{Binding NumberOfNotes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }"
                     TextWrapping="Wrap" />
            <ToggleSwitch Header="Sortierung"
                          OnContent="Aufsteigend"
                          OffContent="Absteigend"
                          Margin="0 5"
                          IsOn="{x:Bind ViewModel.IsSortAscending, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</Page>
